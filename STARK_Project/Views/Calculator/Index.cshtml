@model STARK_Project.Models.CalculatorViewModel
@{
    ViewData["Title"] = "Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>S.T.A.R.K @ViewData["Title"]</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/site.css" rel="stylesheet">

</head>
<!-- Begin Page Content -->
<body class="bg-gradient-primary">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-5 col-lg-6 col-md-7">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            @*<div class="col-lg-5 d-none d-lg-block bg-login-image"></div>*@
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Chce wymienić</h1>
                                    </div>
                                    <form class="user" asp-action="Index" asp-controller="Calculator">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Ilość
                                        </div>
                                        <!-- Ilość -->
                                        <div class="form-group">
                                            <input asp-for="@Model.LeftValue" class="form-control form-control-user" placeholder="$" />
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Waluta 1
                                        </div>
                                        <!-- Waluta 1 -->
                                        <div class="form-group">
                                            <input asp-for="@Model.LeftCurrency" class="form-control form-control-user" placeholder="Nazwa" />
                                            <span class="text-danger"></span>
                                        </div>
                                        <div class="col-auto text-center">
                                            <i class="fas fa-exchange-alt fa-2x text-gray-500"></i>
                                        </div>
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Waluta 2
                                        </div>
                                        <!-- Waluta 2 -->
                                        <div class="form-group">
                                            <input asp-for="@Model.RightCurrency" class="form-control form-control-user" placeholder="Nazwa" />
                                            <span class="text-danger"></span>
                                        </div>
                                        <!-- Submit Button -->
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-user btn-block">Przelicz</button>
                                        </div>
                                    </form>
                                    <!-- Wynik niżej -->
                                    <div class="col-xl col-md">
                                        <div class="card border-bottom-primary shadow h-100 py-2">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <!-- Teksty do podmiany na opcje wpisane w formularzu -->
                                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                            @Model.LeftValue @Model.LeftCurrency =
                                                        </div>
                                                        <div class="h5 mb-0 font-weight-bold text-gray-800">70 000 000</div>
                                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                            PLN
                                                        </div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <i class="fas fa-coins fa-2x text-gray-300"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
</body>
<!-- /.container-fluid -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}