@model STARK_Project.Models.SubscriptionsViewModel

@{
    ViewData["Title"] = "Subscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>S.T.A.R.K @ViewData["Title"]</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/site.css" rel="stylesheet">

</head>
<div class="container-fluid">

    <div class="d-sm-flex align-items-center mb-4">
        <h1 class="h3 mb-0 font-weight-bold text-gray-800 mr-4">This is your personal cryptocurrency page:</h1>
    </div>
    <!-- Content Row -->
    <div class="row">
        <div class="col-xl-6 col-md-6 mb-4">
            <div class="card border-bottom-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Ilość obserwowanych
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.WatchedCryptocurrencies.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-flag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @foreach (var currency in Model.WatchedCryptocurrencies)
    {
        <div class="row">
            <div class="col-lg-6 mb-4">

                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
                        @*                        <i class="fab fa-@currency.Name.ToLower() fa-2x mr-4"></i><h6 class="m-0 font-weight-bold text-primary">@currency.Name</h6>*@
                        @*<i class="fab fa-bitcoin fa-2x mr-4"></i>*@
                        <h6 class="m-0 font-weight-bold text-primary">@currency.Name</h6>
                        <h6 class="m-0 font-weight-bold text-gray-900">@currency.UnitPrice</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-sm-flex align-items-center">
                            <a class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm mr-4 nav-link" asp-area="" asp-controller="Details" asp-action="Index" asp-route-cryptocurrency="@currency.Symbol">
                                <i class="fas fa-info-circle fa-sm text-white-50"></i> Details
                            </a>
                            <a href="https://www.binance.com/en/buy-sell-crypto" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm mr-4 nav-link">
                                <i class="fas fa-money-bill-wave fa-sm text-white-50"></i> Kup / Sprzedaj
                            </a>
                            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm mr-4 nav-link">
                                <i class="fas fa-ban fa-sm text-white-50"></i> Odobserwuj
                            </a>
                            <a href="" type="button" value="Refresh Page" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm mr-4 nav-link">
                                <i class="fas fa-sync-alt fa-sm text-white-50"></i> Aktualizuj
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }



